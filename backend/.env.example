# General Configuration
PORT=8080
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# CORS Configuration
# Main production frontend URL - must match your deployed frontend domain
CORS_ORIGIN=https://your-production-domain.com
# Additional allowed origins (comma-separated for staging/preview deployments)
ADDITIONAL_CORS_ORIGINS=

# Cookie Configuration
# Cookie domain for cross-domain authentication (leave empty for automatic detection)
COOKIE_DOMAIN=
# Cookie security settings (automatically set based on NODE_ENV)
COOKIE_SECURE=auto
COOKIE_SAME_SITE=none

# MongoDB
MONGODB_URI=

# JWT Secrets
ACCESS_TOKEN_SECRET=
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=
REFRESH_TOKEN_EXPIRY=10d

# GitHub OAuth App
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:8080/api/v1/auth/github/callback

# Security
CRYPTO_SECRET_KEY=

# Services
OPENROUTER_API_KEY=
